<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="TodoApp.Views.ListPage"
             Title="Todo">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="plus.png" Clicked="OnItemAdded" />
    </ContentPage.ToolbarItems>
    <ListView x:Name="listView" ItemSelected="OnListItemSelected" >
        <ListView.Margin>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="iOS" Value="0,0,20,0" />
                <On Platform="Android" Value="20" />
            </OnPlatform>
        </ListView.Margin>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="20,0,0,0" Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="{Binding Name}" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" FontSize="Body" />
                        <Image Source="check.png" HorizontalOptions="End" IsVisible="{Binding Path=Done}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>